[lints]
; all=warn

[include]
; ./src/*.js

[ignore]

; .*/node_modules/.*
.*/node_modules/hellojs/.*
.*/node_modules/graphql/.*
.*/node_modules/graphql-language-service-interface/.*
.*/node_modules/graphql-language-service-utils/.*
.*/node_modules/graphql-language-service-types/.*
.*/node_modules/graphql-language-service-config/.*
.*/node_modules/graphql-language-service-parser/.*
.*/node_modules/radium/.*
.*/node_modules/react-scripts/.*
.*/node_modules/react-storybooks-relay-container/.*
.*/node_modules/react-event-listener/.*
.*/create-react-app/.*

[libs]
./node_modules/fbjs/flow/lib
./flow-typed

[options]
esproposal.class_static_fields=enable
esproposal.class_instance_fields=enable

module.file_ext=.js
module.file_ext=.json
module.file_ext=.jsx
module.file_ext=.css
module.file_ext=.scss

module.name_mapper='^\(.*\)\.css$' -> 'react-scripts/config/flow/css'
module.name_mapper='^\(.*\)\.\(jpg\|png\|gif\|eot\|otf\|webp\|svg\|ttf\|woff\|woff2\|mp4\|webm\)$' -> 'react-scripts/config/flow/file'

suppress_type=$FlowIssue
suppress_type=$FlowFixMe
